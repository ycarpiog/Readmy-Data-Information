# 1. Listar distribuciones instaladas
wsl --list --verbose

# 2. Exportar la distribuci贸n a un archivo .tar
wsl --export Ubuntu D:\wsl\ubuntu-backup.tar

# 3. Desregistrar la distribuci贸n actual
wsl --unregister Ubuntu

# 4. Crear directorio en D: para WSL
mkdir D:\wsl\ubuntu

# 5. Importar la distribuci贸n en la nueva ubicaci贸n
wsl --import Ubuntu D:\wsl\ubuntu D:\wsl\ubuntu-backup.tar --version 2

# 6. Establecer usuario por defecto (importante!)
ubuntu config --default-user tu_usuario

# 7. Eliminar el archivo backup para ahorrar espacio
rm D:\wsl\ubuntu-backup.tar
